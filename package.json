{
  "name": "@chargedparticles/universe",
  "version": "0.4.2",
  "keywords": [
    "ethereum",
    "nft",
    "non-fungible",
    "defi"
  ],
  "engines": {
    "node": ">=12.16.3",
    "npm": ">=6.14.4"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules && rm -f yarn.lock && yarn clean && yarn clean-test && yarn",
    "verify": "yarn hint && yarn test",
    "clean": "rm -rf build cache",
    "clean-deployed": "rm -rf abis deployed && rm -f .openzeppelin/ropsten.json",
    "clean-test": "rm -rf deployments/hardhat_31337 test-results.xml",
    "compile": "hardhat --show-stack-traces --max-memory 8192 compile",
    "test": "yarn clean-test && hardhat --show-stack-traces test",
    "hint": "solhint \"contracts/**/*.sol\"",
    "coverage": "yarn clean && yarn clean-test && hardhat compile && hardhat coverage --network coverage --temp build; rm -rf cache",
    "gas": "REPORT_GAS=true hardhat test --network local",
    "start": "hardhat node --port 8545",
    "deploy": "hardhat --network ${npm_config_network:-hardhat} --show-stack-traces deploy $(${npm_config_protocol:-false} && pritnf \"--protocol\") $(${npm_config_aave:-false} && printf \"--aave\") $(${npm_config_proton:-false} && printf \"--proton\") $(${npm_config_ion:-false} && printf \"--ion\") $(${npm_config_timelocks:-false} && printf \"--timelocks\")",
    "deploy-all": "yarn compile && yarn deploy --protocol --aave --proton --ion --timelocks",
    "run-tx": "hardhat run ./scripts/run-tx.js --network",
    "gen-docs": "solidity-docgen -i contracts -o docs",
    "fork": "URI='https:^^mainnet.infura.io^v3^' && KEY=$(grep INFURA_API_KEY .env | cut -d '=' -f2) && npx ganache-cli -f $(echo `${URI//^//}${KEY}`) --chainId 1"
  },
  "dependencies": {
    "hardhat-deploy": "^0.7.0-beta.28",
    "hardhat-deploy-ethers": "^0.3.0-beta.5"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@opengsn/gsn": "^2.0.1",
    "@openzeppelin/cli": "^2.8.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.3.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "@truffle/hdwallet-provider": "^1.0.34",
    "chai": "^4.2.0",
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.0.0",
    "eslint-plugin-jest": "^24.0.1",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.8",
    "ganache-cli": "^6.9.0",
    "hardhat": "^2.0.3",
    "hardhat-abi-exporter": "^2.0.6",
    "hardhat-gas-reporter": "^1.0.1",
    "lodash": "^4.17.15",
    "mocha-junit-reporter": "^2.0.0",
    "sleep": "^6.3.0",
    "solc": "0.6.12",
    "solhint": "^3.0.0",
    "solidity-coverage": "^0.7.4",
    "solidity-docgen": "^0.5.3"
  }
}
