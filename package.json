{
  "name": "@chargedparticles/universe",
  "version": "0.4.2",
  "keywords": [
    "ethereum",
    "nft",
    "non-fungible",
    "defi"
  ],
  "engines": {
    "node": ">=12.16.3",
    "npm": ">=6.14.4"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules && rm -f yarn.lock && yarn clean && yarn clean-test && yarn",
    "verify": "yarn hint && yarn test",
    "clean": "rm -rf build cache",
    "clean-deployed": "rm -rf abis deployed && rm -f .openzeppelin/ropsten.json",
    "clean-test": "rm -rf deployments/buidlerevm_31337 test-results.xml",
    "compile": "buidler --show-stack-traces --max-memory 8192 compile",
    "test": "yarn clean-test && buidler test",
    "hint": "solhint \"contracts/**/*.sol\"",
    "coverage": "yarn clean && yarn clean-test && buidler compile && buidler coverage --network coverage --temp build; rm -rf cache",
    "gas": "REPORT_GAS=true buidler test --network local",
    "start": "buidler node --port 8545",
    "deploy-protocol": "buidler run ./scripts/deploy-protocol.js --network",
    "deploy-aave": "buidler run ./scripts/deploy-aave.js --network",
    "deploy-proton": "buidler run ./scripts/deploy-proton.js --network",
    "deploy-ion": "buidler run ./scripts/deploy-ion.js --network",
    "deploy-timelocks": "buidler run ./scripts/deploy-timelocks.js --network",
    "run-tx": "buidler run ./scripts/run-tx.js --network",
    "gen-docs": "solidity-docgen -i contracts -o docs"
  },
  "dependencies": {},
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.3",
    "@nomiclabs/buidler-ethers": "^2.0.0",
    "@nomiclabs/buidler-etherscan": "^2.1.0",
    "@nomiclabs/buidler-waffle": "^2.0.0",
    "@opengsn/gsn": "^2.0.1",
    "@openzeppelin/buidler-upgrades": "^1.0.2",
    "@openzeppelin/cli": "^2.8.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "@truffle/hdwallet-provider": "^1.0.34",
    "buidler-abi-exporter": "^1.0.1",
    "buidler-deploy": "^0.6.0-beta.16",
    "buidler-gas-reporter": "^0.1.3",
    "chai": "^4.2.0",
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "eslint": "^7.0.0",
    "eslint-plugin-jest": "^24.0.1",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.8",
    "ganache-cli": "^6.9.0",
    "lodash": "^4.17.15",
    "mocha-junit-reporter": "^2.0.0",
    "solc": "0.6.12",
    "solhint": "^3.0.0",
    "solidity-coverage": "^0.7.4",
    "solidity-docgen": "^0.5.3"
  }
}
